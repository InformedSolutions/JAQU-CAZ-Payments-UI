-# IE11 polyfill for datepicker
:javascript
  window.MSInputMethodContext && 
    document.documentMode && 
    document.write(
      '<script src="https://cdn.jsdelivr.net/npm/ie11-custom-properties@latest/ie11CustomProperties.js"><\x2fscript>'
    );

- title_and_header = 'When do you want your weekly charge to start?'
- page_title(title_and_header)

= link_to 'Back', @return_path, class: 'govuk-back-link', id: 'back-link'

#dates_data{data: @dates.to_json}

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      - if alert
        = render 'common/error_summary',
          error_msg_div: '#select-weekly-date-error',
          error_msg: alert

      %h1.govuk-heading-l
        = title_and_header
      %p A weekly charge allows you to drive in Leeds for 7 consecutive days.
      %p A daily charge period runs from midnight to midnight.
      - if @all_paid
        .govuk-inset-text
          You have paid for everything, come back on a different day.
          To start another journey click the link at the top of the page.


      = form_tag confirm_date_weekly_dates_path, method: :post do
        .govuk-form-group{class: ('govuk-form-group--error' if alert)}
          %fieldset.govuk-fieldset
            %h2.govuk-heading-m
              Start date
            %span.govuk-hint
              For example, 12 11 2020
            - if alert
              %span#select-weekly-date-error.govuk-error-message
                %span.govuk-visually-hidden Error:
                = alert
            = render 'dates/select_weekly_date_input/normal'

        %p#week-last-day-notice

        = render 'dates/details'

        = submit_tag 'Continue', class: 'govuk-button', 'data-module': 'govuk-button' if !@all_paid

      = javascript_pack_tag 'datePicker'
      
      %p= link_to 'Pay for 1 day instead', select_period_dates_path, id: 'pay_instead'
