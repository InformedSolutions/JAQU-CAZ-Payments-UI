- title_and_header = 'How many days do you want to pay for?'
- page_title(title_and_header)

= link_to 'Back', @return_path, class: 'govuk-back-link', id: 'back-link'

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds

      - if alert
        = render 'common/error_summary',
          error_msg_div: '#select-period-error',
          error_msg: 'Choose to pay for 1 day or 7 days'

      %h1.govuk-heading-l
        = title_and_header
      .govuk-inset-text
        Taxis and private hire vehicles licensed by Leeds City Council can pay a reduced charge of
        Â£50 a week.

      = form_tag confirm_select_period_dates_path, method: :post do
        %fieldset.govuk-fieldset
          %legend.govuk-visually-hidden
            Select period

          - if alert
            = render 'dates/select_period_input/errored'
          - else
            = render 'dates/select_period_input/normal'
          = submit_tag 'Continue', class: 'govuk-button', 'data-module': 'govuk-button'
