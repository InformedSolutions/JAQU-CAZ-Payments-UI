= link_to 'Back', enter_details_vehicles_path, method: :get, class: 'govuk-back-link'
%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl Are these the vehicle's details?
      %table.govuk-table
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} Vehicle registration
          %th.govuk-table__cell{id: 'registration-number'}
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} Vehicle type approval
          %th.govuk-table__cell{id: 'type-approval'}
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} CAZ vehicle type
          %th.govuk-table__cell{id: 'type'}
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} Make
          %th.govuk-table__cell{id: 'make'}
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} Model
          %th.govuk-table__cell{id: 'model'}
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} Colour
          %th.govuk-table__cell{id: 'colour'}
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} Fuel type
          %th.govuk-table__cell{id: 'fuel-type'}
        %tr.govuk-table__row
          %td.govuk-table__cell{scope: 'row'} Taxi
          %th.govuk-table__cell{id: 'taxi'}
      = form_tag local_authority_vehicles_path, method: :post do
        - if alert
          .govuk-form-group{class: 'govuk-form-group--error'}
            %span#confirm-vehicle-error.govuk-error-message
              %span.govuk-visually-hidden Error:
              Select yes if the details are correct
        %fieldset.govuk-fieldset
          .govuk-form-group
            .govuk-radios.govuk-radios--inline
              .govuk-radios__item
                %input#confirm-vehicle-1.govuk-radios__input{name: 'confirm-vehicle', type: 'radio', value: 'yes'}
                %label.govuk-label.govuk-radios__label{for: "confirm-vehicle-1"}
                  Yes
              .govuk-radios__item
                %input#confirm-vehicle-2.govuk-radios__input{name: 'confirm-vehicle', type: 'radio', value: 'no'}
                %label.govuk-label.govuk-radios__label{for: "confirm-vehicle-2"}
                  No

        = submit_tag 'Confirm', class: 'govuk-button', 'data-module': 'govuk-button'
